---
layout: 'base.njk'
---

<article class="main-article">

  <aside>
    <details>
      <summary>
     Table of Contents
      </summary>

      {{ content | toc | safe }}
      <a href="#top-of-site-anchor" class="top-of-site">Back to Top</a>
    </details>

  </aside>
  <div class="container container--narrow flow">
    <div id="top-of-site-anchor"></div>
    <h1 class="article-title">
      {{ title}}
    </h1>
    <figure class="main-article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}">
      <figcaption>
        {{ imageAlt}}
      </figcaption>
    </figure>
    {{ content | safe}}

  </div>

</article>