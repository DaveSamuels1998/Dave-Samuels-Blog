---
layout: 'base.njk'
---

<article class="main-article">
  <aside>
    <details>
      <summary>
        <button class="button-link" >Table of Contents</button>
      </summary>

      {{ content | toc | safe }}

    </details>

  </aside>
  <div class="container container--narrow flow">

    <h1 class="article-title">
      {{ title}}
    </h1>
    <figure class="main-article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}">
      <figcaption>
        {{ imageAlt}}
      </figcaption>
    </figure>
    {{ content | safe}}
  </div>

</article>